{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "javac: Compile current file",
            "type": "shell",
            "command": "javac",
            "args": [
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$javac"
            ]
        },
        {
            "label": "java: Run current file",
            "type": "shell",
            "command": "java",
            "args": [
                "${fileBasenameNoExtension}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "maven: package jspEjemplo",
            "type": "shell",
            "command": "mvn",
            "args": [
                "-f",
                "${workspaceFolder}/Colecciones/ArrayList/jspEjemplo/pom.xml",
                "clean",
                "package"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}